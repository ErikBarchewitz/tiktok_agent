<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="academy_quiz_tree" model="ir.ui.view">
        <field name="name">academy.quiz.tree</field>
        <field name="model">academy.quiz</field>
        <field name="arch" type="xml">
            <tree string="Quizzes">
                <field name="name"/>
                <field name="question_count"/>
                <field name="average_score"/>
            </tree>
        </field>
    </record>

    <record id="academy_quiz_form" model="ir.ui.view">
        <field name="name">academy.quiz.form</field>
        <field name="model">academy.quiz</field>
        <field name="arch" type="xml">
            <form string="Quiz">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="passing_score"/>
                        <field name="show_feedback"/>
                        <field name="description" widget="html"/>
                    </group>
                    <notebook>
                        <page string="Questions" name="questions">
                            <field name="question_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="question_type"/>
                                    <field name="score"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Attempts" name="attempts">
                            <field name="attempt_ids" readonly="1">
                                <tree>
                                    <field name="user_id"/>
                                    <field name="score"/>
                                    <field name="max_score"/>
                                    <field name="passed"/>
                                    <field name="time_spent"/>
                                    <field name="create_date"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="academy_quiz_question_form" model="ir.ui.view">
        <field name="name">academy.quiz.question.form</field>
        <field name="model">academy.quiz.question</field>
        <field name="arch" type="xml">
            <form string="Question">
                <sheet>
                    <group>
                        <field name="quiz_id"/>
                        <field name="name"/>
                        <field name="question_type"/>
                        <field name="score"/>
                        <field name="feedback_correct" widget="text"/>
                        <field name="feedback_incorrect" widget="text"/>
                    </group>
                    <notebook>
                        <page string="Options" attrs="{'invisible': [('question_type', '=', 'text')]}"/>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="academy_quiz_action" model="ir.actions.act_window">
        <field name="name">Quizzes</field>
        <field name="res_model">academy.quiz</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="academy_quiz_attempt_action" model="ir.actions.act_window">
        <field name="name">Quiz Attempts</field>
        <field name="res_model">academy.quiz.attempt</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
