<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="academy_course_section_tree" model="ir.ui.view">
        <field name="name">academy.course.section.tree</field>
        <field name="model">academy.course.section</field>
        <field name="arch" type="xml">
            <tree string="Sections" decoration-info="content_ids">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="channel_id"/>
                <field name="estimated_duration"/>
            </tree>
        </field>
    </record>

    <record id="academy_course_section_form" model="ir.ui.view">
        <field name="name">academy.course.section.form</field>
        <field name="model">academy.course.section</field>
        <field name="arch" type="xml">
            <form string="Section">
                <sheet>
                    <group>
                        <field name="channel_id"/>
                        <field name="name"/>
                        <field name="sequence"/>
                        <field name="estimated_duration"/>
                        <field name="description" widget="html"/>
                    </group>
                    <notebook>
                        <page name="content" string="Content">
                            <field name="content_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="content_kind"/>
                                    <field name="quiz_id"/>
                                    <field name="survey_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="academy_course_section_action" model="ir.actions.act_window">
        <field name="name">Sections</field>
        <field name="res_model">academy.course.section</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
