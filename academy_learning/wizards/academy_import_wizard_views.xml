<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="academy_import_wizard_view" model="ir.ui.view">
        <field name="name">academy.import.wizard.form</field>
        <field name="model">academy.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Course" class="o_academy_import_wizard">
                <sheet>
                    <group>
                        <field name="archive" filename="filename"/>
                        <field name="filename" invisible="1"/>
                        <field name="auto_publish"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_import" type="object" class="btn-primary" string="Import"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
